@model IEnumerable<Blog.Entity.Entity.CommentAnswer>

@{
    ViewBag.Title = "Yorum Cevapları";
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
}

<h2>Yorum Cevapları</h2>

<table class="table">
    <tr>
        <th>
            <label>Kullanıcı</label>
        </th>
        <th>
            <label>Yorum</label>
        </th>
        <th>
            <label>Oluşturulma Tarihi</label>
        </th>
        <th></th>
    </tr>
    <tr>
        <td class="wordwrap">
            <label>@Model.ToList().FirstOrDefault().Comment.User.UserName</label>
        </td>
        <td class="wordwrap">
            <label>@Model.ToList().FirstOrDefault().Comment.Content</label>
        </td>
        <td class="wordwrap">
            <label>@Model.ToList().FirstOrDefault().Comment.CreatedDate</label>
        </td>
    </tr>
    <tr>
       <td>
           -
       </td>
    </tr>
    <tr>
        <th>
            <label>Kullanıcı</label>
        </th>
        <th>
            <label>Yanıt</label>
        </th>
        <th>
            <label>Oluşturulma Tarihi</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="wordwrap">
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td class="wordwrap">
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td class="wordwrap">
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
        </tr>
    }

</table>